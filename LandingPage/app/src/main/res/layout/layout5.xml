<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_black_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@drawable/gradient_black_1"
        android:padding="@dimen/padding">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kalam_bold"
                    android:gravity="center"
                    android:text="@string/dr_strange"
                    android:textColor="@color/heading"
                    android:textSize="@dimen/text_size_heading" />


            </com.facebook.shimmer.ShimmerFrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/kalam_regular"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="@string/lorem_ipsum"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:cardCornerRadius="@dimen/corner"
            app:cardElevation="@dimen/card_elevation">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/dr_strange"
                android:scaleType="fitXY"
                android:src="@drawable/dr_strange" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>